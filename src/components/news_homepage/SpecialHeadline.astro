---
const {ranking,title,description,img} = Astro.props
---
<div class="flex flex-col sm:flex-row gap-4 md:h-40 h-fit w-full">
    <img src={img.src} alt="image" />
    <div class="flex flex-col">
        <span class=" text-gray-400 text-[26px] md:text-[40px] font-extrabold">
          {"0" + ranking}
        </span>
        <h4 class="text-lg md:text-xl font-extrabold text-stone-800 hover:text-red-500">
          {title}
        </h4>
        <p class="text-gray-600 text-sm md:text-lg">{description}</p>
    </div>
</div>