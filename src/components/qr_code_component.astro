---
import qr_code from "../assets/images/image-qr-code.png"
import {Image} from '@astrojs/image/components';
---

<div class="w-96 h-fit flex flex-col justify-center items-center bg-white p-4 rounded-2xl shadow-stone-700 shadow-2xl">
    <Image class="rounded-2xl" src={qr_code} alt="qr_code_component_image" />
    <div class="flex flex-col p-4 text-center gap-3">
        <h3 class="text-[26px] font-bold text-slate-800">
          Impove your front-end skills by buildign projects
        </h3>
        <span class="text-slate-500">
          Scan the QR code to visit Frontend Mentor and take your coding skills
          to the next level
        </span>
    </div>
</div>